# Maintainer: Chih-Hsuan Yen <yan12125@gmail.com>

_pkgname=lxqt-archiver
pkgname=$_pkgname-git
pkgver=1.1.0
pkgrel=1
pkgdesc=" A simple & lightweight desktop-agnostic Qt file archiver"
arch=('amd64')
url="https://lxqt.org"
license=("GPL2")
depends=('libfm-qt-git' 'libglib2.0-0t64' 'libjson-glib-1.0-0')
makedepends=('git' 'cmake' 'lxqt-build-tools-git' 'libmenu-cache-dev'
             'libglib2.0-dev' 'libjson-glib-dev' 'qt6-tools-dev'
             'libexif-dev')
provides=("$_pkgname=$pkgver")
conflicts=("$_pkgname")
source=("git+https://github.com/lxqt/$_pkgname.git")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build

  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    "$srcdir/$_pkgname"

  make
}

package() {
  cd build

  make DESTDIR="$pkgdir" install
}
